<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/member_login"
            android:id="@+id/textView"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="@color/red"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/login_edittextstyle"
            android:id="@+id/txt_username"
            android:layout_margin="8dp"
            android:paddingLeft="10dp"
            android:textColorHint="@color/lightdark"
            android:hint="username"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/login_edittextstyle"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColorHint="@color/lightdark"
            android:hint="password"
            android:layout_margin="8dp"
            android:ems="10"
            android:id="@+id/txt_userpass" />

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="@string/login"
            android:textColor="@color/white"
            android:background="@drawable/btn_red_curved"
            android:id="@+id/btn_login"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remember_me"
            android:id="@+id/isRememberCheckBox"
            android:checked="false"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Don&apos;t have a account?"
                android:id="@+id/textView3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:text="@string/sign_up"
                android:id="@+id/btn_signup"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@mipmap/icon"
        android:layout_above="@+id/linearLayout7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forget_password"
        android:id="@+id/txt_forgotpass"
        android:layout_margin="5dp"
        android:textColor="@color/dark"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
