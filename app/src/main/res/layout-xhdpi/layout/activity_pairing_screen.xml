<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pair_bg"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="Start"
            android:background="@drawable/red_circle"
            android:textColor="@color/white"
            android:layout_marginLeft="77dp"
            android:id="@+id/btn_start"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="77dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn_test"
            android:text="Test"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/gray_circle"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/add_btn"
        android:background="@mipmap/add_device"
        android:layout_marginTop="95dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Device Disconnected"
        android:layout_margin="5dp"
        android:id="@+id/txtDeviceConnected"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bluetoothProgressBar"
        android:layout_alignBottom="@+id/txtDeviceConnected"
        android:layout_centerHorizontal="true"
        android:indeterminateDrawable="@drawable/custom_progress_background"
        android:indeterminate="false" />

</RelativeLayout>
