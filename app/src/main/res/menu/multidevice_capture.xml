<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_bar"
        android:background="@color/black"
        android:theme="@style/AppTheme.AppBarOverlay"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >


        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:fitsSystemWindows="true">
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="37dp"
                    android:layout_height="47dp"
                    android:layout_marginEnd="88dp"
                    android:layout_marginTop="428dp"
                    android:scaleType="fitEnd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/heartIcon"
                    app:srcCompat="@drawable/_temp_icon" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="66dp"
                    android:layout_height="93dp"
                    android:layout_marginEnd="84dp"
                    android:layout_marginTop="132dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/lung" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="40dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="88dp"
                    android:layout_marginTop="320dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/iconspo2" />

                <ImageView
                    android:id="@+id/heartIcon"
                    android:layout_width="43dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="92dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0"
                    android:scaleType="fitEnd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/heart" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/bpmData"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:contentDescription="TODO"
                            android:cropToPadding="false"
                            android:scaleType="fitStart"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_launcher_background"
                            tools:layout_editor_absoluteY="264dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/bpmGGX"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="fitEnd"
                                app:srcCompat="@drawable/bpm" />

                            <TextView
                                android:id="@+id/_hrtext"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="monospace"
                                android:paddingRight="10dp"
                                android:text="HR"
                                android:textAlignment="textEnd"
                                android:textColor="@android:color/holo_blue_light"
                                android:textSize="70sp" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:text="Pulse"
                                android:textAlignment="textEnd"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/respData"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:background="@android:color/transparent"
                            android:contentDescription="TODO"
                            android:cropToPadding="false"
                            android:scaleType="fitStart"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_launcher_background"
                            tools:layout_editor_absoluteY="264dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageViewx"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="fitEnd"
                                app:srcCompat="@drawable/brpm" />

                            <TextView
                                android:id="@+id/_respRateText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="monospace"
                                android:paddingRight="10dp"
                                android:text="RR"
                                android:textAlignment="textEnd"
                                android:textColor="@android:color/holo_orange_light"
                                android:textSize="70sp" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingRight="10dp"
                                android:text="Respiratory rate"
                                android:textAlignment="textEnd"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/spoData"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:contentDescription="TODO"
                            android:cropToPadding="false"
                            android:scaleType="fitStart"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_launcher_background"
                            tools:layout_editor_absoluteY="264dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageViewc"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:scaleType="fitEnd"
                                app:srcCompat="@drawable/percet" />

                            <TextView
                                android:id="@+id/_heartRate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="monospace"
                                android:paddingRight="10dp"
                                android:text="98"
                                android:textAlignment="textEnd"
                                android:textColor="@android:color/holo_blue_dark"
                                android:textSize="70sp" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:paddingRight="10dp"
                                android:text="SP02"
                                android:textAlignment="textEnd"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/tempData"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:cropToPadding="false"
                            android:scaleType="fitStart"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_launcher_background"
                            tools:layout_editor_absoluteY="264dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageViewc2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:adjustViewBounds="false"
                                android:cropToPadding="false"
                                android:scaleType="fitEnd"
                                app:srcCompat="@drawable/degc" />

                            <TextView
                                android:id="@+id/_temp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingRight="10dp"
                                android:text="0C"
                                android:textAlignment="textEnd"
                                android:textColor="@android:color/holo_purple"
                                android:textSize="70sp" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingRight="10dp"
                                android:text="Temp"
                                android:textAlignment="textEnd"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <!--
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="81dp"
                        android:layout_marginTop="5dp">


                        <View
                            android:id="@+id/mainStatusBox"
                            android:layout_width="58dp"
                            android:layout_height="67dp"
                            android:background="#3fe1fa" />

                        <TextView
                            android:id="@+id/textViewStatus"
                            android:layout_width="309dp"
                            android:layout_height="66dp"
                            android:padding="10dp"
                            android:paddingStart="10dp"
                            android:text="1700 Market Street"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="30sp" />
                  </TableRow>
    -->


                </LinearLayout>

            </android.support.constraint.ConstraintLayout>
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/btn_slot_8"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:elevation="3dp"
                app:srcCompat="@drawable/addicon"
                tools:layout_editor_absoluteY="560dp" />


            <ImageView
                android:id="@+id/btn_slot_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:elevation="3dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_slot_3"
                app:srcCompat="@drawable/addicon" />

            <ImageView
                android:id="@+id/btn_slot_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:elevation="3dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_slot_2"
                app:srcCompat="@drawable/addicon" />

            <ImageView
                android:id="@+id/btn_slot_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:elevation="3dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_slot_1"
                app:srcCompat="@drawable/addicon" />

            <ImageView
                android:id="@+id/btn_slot_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="3dp"
                app:srcCompat="@drawable/addicon"
                tools:layout_editor_absoluteY="386dp" />

            <ImageView
                android:id="@+id/btn_slot_6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:elevation="3dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_slot_5"
                app:srcCompat="@drawable/addicon" />

            <ImageView
                android:id="@+id/btn_slot_7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:elevation="3dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_slot_6"
                app:srcCompat="@drawable/addicon" />

            <ImageView
                android:id="@+id/btn_slot_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="3dp"
                app:srcCompat="@drawable/addicon"
                tools:layout_editor_absoluteY="386dp" />

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/powerButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/button_background"
                android:elevation="5dp"
                android:foreground="?attr/selectableItemBackground"
                app:srcCompat="@drawable/powerred"
                tools:layout_editor_absoluteY="1dp" />


            <TextView
                android:id="@+id/txt_test_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="338dp" />

            <Button
                android:id="@+id/btnHubCapture"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:text="Record"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_test_area" />


            <android.support.constraint.ConstraintLayout
                android:id="@+id/progress_layout"
                android:layout_width="267dp"
                android:layout_height="193dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:elevation="10dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ProgressBar
                    android:id="@+id/capture_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="26dp"
                    android:elevation="7dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.492"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.865" />

                <TextView
                    android:id="@+id/txt_progress_updates"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="68dp"
                    android:elevation="7dp"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/capture_progress"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent" />

            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view2"
            android:layout_marginTop="1dp"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:theme="@style/DrawerIconStyle"
            app:itemTextAppearance="@style/Base.TextAppearance.AppCompat"
            app:menu="@menu/activity_bioplux_home" >

        </android.support.design.widget.NavigationView>
    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>


