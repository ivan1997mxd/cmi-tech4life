<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@mipmap/user_profile_icon"
            android:layout_gravity="center_horizontal">


           <!-- <esteth.andr.com.estethapp.view.CircularImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView"
                android:src="@mipmap/ic_launcher"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />-->

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profileImageView"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"
                android:layout_margin="5dp"
                android:src="@drawable/no_image"/>


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_weight="1.7"
        android:background="@color/profilecolor1"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@color/profilecolor2"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="3dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/txt_id"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:id="@+id/textViewNameLabel"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Irfan Ali"
                android:editable="false"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:background="@color/profilecolor2"
                android:textColor="@color/white"
                android:id="@+id/textViewName"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textViewNameLabel"
                android:layout_toEndOf="@+id/textViewNameLabel"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@color/profilecolor2"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="3dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/txt_email"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:id="@+id/textViewEmailLabel"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="irfanali@yahoo.com"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:background="@color/profilecolor2"
                android:textColor="@color/white"
                android:id="@+id/textViewEmail"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textViewEmailLabel"
                android:layout_toEndOf="@+id/textViewEmailLabel" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/profilecolor2"
            android:layout_weight="1"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="@string/txt_pwd"
                android:layout_marginLeft="5dp"
                android:id="@+id/textViewPasswordLabel"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Irfan Ali"
                android:textColor="@color/white"
                android:inputType="textPassword"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:background="@color/profilecolor2"
                android:id="@+id/textViewPassword"
                android:layout_alignTop="@+id/textViewPasswordLabel"
                android:layout_toRightOf="@+id/textViewPasswordLabel"
                android:layout_toEndOf="@+id/textViewPasswordLabel" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/profilecolor2"
            android:layout_weight="1"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="@string/txt_cnfpwd"
                android:layout_marginLeft="5dp"
                android:id="@+id/textViewConfirmPasswordLabel"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Irfan Ali"
                android:textColor="@color/white"
                android:inputType="textPassword"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:background="@color/profilecolor2"
                android:id="@+id/textViewConfirmPassword"
                android:layout_alignTop="@+id/textViewConfirmPasswordLabel"
                android:layout_toRightOf="@+id/textViewConfirmPasswordLabel"
                android:layout_toEndOf="@+id/textViewConfirmPasswordLabel" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="3dp"
            android:background="@color/profilecolor2"
            android:layout_marginRight="6dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="@string/txt_gndr"
                android:layout_marginLeft="5dp"
                android:id="@+id/textViewGenderLabel"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RadioGroup
                android:id="@+id/radioGrp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/textViewGenderLabel"
                android:layout_toEndOf="@+id/textViewGenderLabel">
                <RadioButton
                    android:id="@+id/radioM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:checked="false"
                    android:layout_weight="1"
                    android:buttonTint="@color/white"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:text="@string/male"
                    />
                <RadioButton
                    android:id="@+id/radioF"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:buttonTint="@color/white"
                    android:textColor="@color/white"
                    android:checked="false"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:text="@string/female"
                    />
            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
          android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="3dp"
            android:background="@color/profilecolor2"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/txt_sync"
                android:layout_marginLeft="5dp"
                android:id="@+id/textViewSync"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
