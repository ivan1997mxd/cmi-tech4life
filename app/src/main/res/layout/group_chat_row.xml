<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imgGroupChat"
        android:src="@mipmap/group_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout4"
        android:layout_toRightOf="@+id/imgGroupChat"
        android:layout_toEndOf="@+id/imgGroupChat">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="Ali"
            android:id="@+id/txtGroupName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="ali@yahoo.com"
            android:id="@+id/txtGroupDate" />
    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/removeChat"
        android:src="@android:drawable/ic_menu_delete"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:id="@+id/txtChatCounter"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/unread_counter"
        android:gravity="center"
        android:text="12"
        android:textColor="#fff"
        android:textSize="10sp"
        android:layout_marginRight="5dp"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
